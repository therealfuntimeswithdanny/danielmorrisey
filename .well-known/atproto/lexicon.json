{
  "lexicon": 1,
  "id": "uk.madebydanny.records",
  "defs": {
    "about": {
      "type": "record",
      "record": {
        "key": "literal",
        "literal": "self"
      },
      "properties": {
        "text": { "type": "string" },
        "langs": {
          "type": "array",
          "items": { "type": "string" }
        },
        "createdAt": {
          "type": "string",
          "format": "datetime"
        }
      },
      "required": ["text", "createdAt"]
    },
    "blob": {
      "type": "record",
      "record": {
        "key": "literal",
        "literal": "self"
      },
      "properties": {
        "blob": {
          "type": "ref",
          "ref": "#blobObj"
        },
        "langs": {
          "type": "array",
          "items": { "type": "string" }
        },
        "createdAt": {
          "type": "string",
          "format": "datetime"
        }
      },
      "required": ["blob", "createdAt"]
    },
    "blobObj": {
      "type": "object",
      "properties": {
        "$type": { "type": "string", "const": "blob" },
        "ref": {
          "type": "object",
          "properties": {
            "$link": { "type": "string" }
          },
          "required": ["$link"]
        },
        "mimeType": { "type": "string" },
        "size": { "type": "integer" }
      },
      "required": ["$type", "ref", "mimeType", "size"]
    },
    "projects": {
      "type": "record",
      "record": {
        "key": "literal",
        "literal": "self"
      },
      "properties": {
        "projects": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "link": { "type": "string" }
            },
            "required": ["name", "description", "link"]
          }
        },
        "langs": {
          "type": "array",
          "items": { "type": "string" }
        },
        "createdAt": {
          "type": "string",
          "format": "datetime"
        }
      },
      "required": ["projects", "createdAt"]
    }
  }
}
