{
  "lexicon": 1,
  "id": "uk.madebydanny.blob",
  "defs": {
    "main": {
      "type": "record",
      "record": {
        "key": "literal",
        "literal": "self"
      },
      "properties": {
        "blob": {
          "type": "ref",
          "ref": "#blobObj"
        },
        "langs": {
          "type": "array",
          "items": { "type": "string" }
        },
        "createdAt": { "type": "string", "format": "datetime" }
      },
      "required": ["blob", "createdAt"]
    },
    "blobObj": {
      "type": "object",
      "properties": {
        "$type": { "type": "string", "const": "blob" },
        "ref": {
          "type": "object",
          "properties": {
            "$link": { "type": "string" }
          },
          "required": ["$link"]
        },
        "mimeType": { "type": "string" },
        "size": { "type": "integer" }
      },
      "required": ["$type", "ref", "mimeType", "size"]
    }
  }
}
